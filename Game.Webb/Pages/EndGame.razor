@page "/EndGame"
@inherits EndGameBase




<div class="container">
<div class="row justify-content-center pt-5 pb-3">
        <div class="col-md-8">
            <h1>@_stateContainerService.GameName Game is Over</h1>
        </div>
</div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Player Name</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var player in _stateContainerService.playersScores)
                    {
                        <tr>
                            <td>@player.PlayerName</td>
                            <td>@player.Score</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>