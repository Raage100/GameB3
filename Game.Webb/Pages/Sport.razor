@inherits SportBase





@if (_stateContainerService.Sports.Any())
{

    <h4 class="text-center">Sports added</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sport in _stateContainerService.Sports)
            {
                <tr>
                    <td>@sport.Name</td>
                    <td>
                        <button class="btn btn-danger" @onclick="(() => HandleRemoveSport(sport.SportId))">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4 class="text-center  px-4">No sports added</h4>
}